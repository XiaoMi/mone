FROM miserver
MAINTAINER youpin-biz-arch@xiaomi.com
RUN mkdir -p /home/work/${project}/
RUN mkdir -p /home/work/log/${project}/
COPY ${project}-server-${version}.jar /home/work/${project}/
ENTRYPOINT ["java","-jar","-Xms512M","-Xmx512M","-XX:+UseG1GC","-XX:+PrintReferenceGC","-XX:+PrintGCDetails","-XX:+PrintGCDateStamps","-XX:+PrintHeapAtGC","-Xloggc:/home/work/log/${project}/gc.log","/home/work/${project}/${project}-server-${version}.jar"]